{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "../basc",
    "module": "esnext",
    "target": "es5",
    "moduleResolution": "node",
    "sourceMap": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "jsx": "react",
    "lib": ["dom", "es2017"],
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "downlevelIteration": true,
    "declaration": true
  },
  "files":["index.ts"]
}
